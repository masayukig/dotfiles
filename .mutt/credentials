# Change the following six lines to match your Gmail account details
set my_pass=`gpg --batch -q --decrypt ~/.gnupg/fastmail.gpg`
set my_user=masayuki@igawa.io
#set my_user=masayuki@igawa.me
set my_smtp_server=smtp.fastmail.com
set my_folder = "imaps://imap.fastmail.com:993"
set my_smtp_port=587
set imap_user = $my_user
set imap_pass = $my_pass
set smtp_url = "smtp://$my_user:$my_pass@$my_smtp_server:$my_smtp_port"
set smtp_pass = $my_pass
set realname = "Masayuki Igawa"
set from = $my_user
set folder = $my_folder
